</div>
<h1 Class="Welcome">Choose your Vibe!</h1>
<div class="container">
  <div class="row d-flex justify-content-between">
    <div class="col">
      {{#each vibes}}

        {{#if (eq @index 0)}}
          <a href="/summer-party"><img
              class="vibeImage"
              src="https://i.ibb.co/Q9c4FyK/summer-party2.jpg"
              alt={{this}}
            /></a>

        {{else if (eq @index 1)}}
          <a href="/home-alone"><img
              class="vibeImage"
              src="https://i.ibb.co/pJmH9MD/home-alone.jpg"
              alt={{this}}
            /></a>

        {{else if (eq @index 2)}}
          <a href="/me-and-friends"><img
              class="vibeImage"
              src="https://i.ibb.co/WPs30pV/Me-and-friends2.jpg"
              alt={{this}}
            /></a>

        {{else if (eq @index 3)}}
          <a href="/hot-girl-summer"><img
              class="vibeImage"
              src="https://i.ibb.co/bsSKCwd/hot-girls-summer.jpg"
              alt={{this}}
            /></a>

        {{/if}}

      {{/each}}
    </div>
  </div>
</div>

